    <style>
      #map {
        height: 350px;
        width: 350px;
      }
    </style>

    <div id="map"></div>

    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: <%= @lat%>, lng: <%= @lng%>},
          zoom: 8
        });
      }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?callback=initMap"
        async defer></script>

